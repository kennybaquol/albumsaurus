{% layout "layout.liquid" %} {% block content %}
<div>
    <h4>Hello, {{ username }}!</h4>

    <h2>Discover Albums</h2>
    <section class="discover">
        {% for album in data limit: 3 %}
        <a href="/albums/{{ album.id }}" name="name" class="item">

            <img src="{{ album.cover_medium}}" alt="{{ album.title }}"><br>
            <!-- <h4>{{ album.title }}</h4> -->
        </a>
        {% else %}
        The collection is empty.
        {% endfor %}
    </section>
    <h5>{{ artistName }}</h5>

    <h2>My Favorites</h2>
    <section class="favorites">
        {% for favorite in favorites reversed limit: 48 %}

        <a href="/albums/{{ favorite.id }}/edit" name="name" class="item">

            <img src="{{ favorite.cover_medium}}" alt="{{ favorite.title }}"><br>
        </a>
        {% else %}
        The collection is empty.
        {% endfor %}
    </section><br>

    <a href="/albums/new">
        <button>ADD CUSTOM ALBUM</button>
    </a><br><br>

    <a href="/users/logout">
        <button>LOGOUT</button>
    </a>

</div>
{% endblock %}